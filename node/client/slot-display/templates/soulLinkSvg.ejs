<% let widthScale = parseInt(config.style.imageWrapperWidth || config.style.imageSideLength) / 100,
    heightScale = parseInt(config.style.imageWrapperHeight || config.style.imageSideLength) / 100; %>
<svg width="0" height="0">
    <defs>
        <clipPath id="soulLinkClipTop">
            <% switch (config.style.soulLinkOrientation) {
                   case 'vertical': %>
                    <rect x="0" y="0" width="50" height="100" />
                    <% break; %>

                <% case 'horizontal': %>
                    <rect x="0" y="0" width="100" height="50" />
                    <% break; %>

                <% case 'diagonal-forward': %>
                    <polygon points="0,100 0,0 100,0" />
                    <% break; %>

                <% case 'diagonal-backward': %>
                    <polygon points="0,0 100,0 100,100" />
                    <% break; %>

                <% case 'custom': %>
                    <% break; %>

                <% default: throw new Error(`Invalid SoulLink Orientation: ${config.style.soulLinkOrientation}`); %>
            <% } %>
        </clipPath>
        <clipPath id="soulLinkClipBottom">
            <% switch (config.style.soulLinkOrientation) {
                   case 'vertical': %>
                    <rect x="50" y="0" width="50" height="100" />
                    <% break; %>

                <% case 'horizontal': %>
                    <rect x="0" y="50" width="100" height="50" />
                    <% break; %>

                <% case 'diagonal-forward': %>
                    <polygon points="0,100 100,100 100,0" />
                    <% break; %>

                <% case 'diagonal-backward': %>
                    <polygon points="0,0 0,100 100,100" />
                    <% break; %>

                <% case 'custom': %>
                    <% break; %>
            <% } %>
        </clipPath>
    </defs>
</svg>