<tr id="<%- pokemon.pid %>">
    <td class="pokemon">
        <%= require('./pokemon-cell.ejs')({ pokemon: pokemon }) %>
    </td>
    <td class="location"><div><%- pokemon.locationMetName %></div></td>
    <%= require('./traits-cell.ejs')({ pokemon }) %>
    <td class="linked-pokemon">
        <% if (MANUAL_LINKING) { %>
            <div class="dropdown">
            </div>
        <% } else { %>
            <%= require('./pokemon-cell.ejs')({ pokemon: linkedPokemon }) %>
        <% } %>
    </td>
    <td class="width-fixed">
        <div class="btn-group">
            <% if (MANUAL_LINKING) { %>
                <button type="button" disabled data-pid="<%- pokemon.pid %>" class="btn-update-link btn btn-primary btn-sm">
                    Update
                </button>
                <button type="button" data-pid="<%- pokemon.pid %>" class="btn-unlink btn btn-outline-secondary btn-sm">
                    Unlink
                </button>
            <% } %>
        </div>
    </td>
    <td class="width-fixed">
        <div>
            <button type="button" data-pid="<%- pokemon.pid %>" class="btn-link-dead btn btn-sm btn-outline-dead">
                Link Died
            </buttn>
        </div>
    </td>
</tr>